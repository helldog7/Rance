<Window x:Class="Rance.FightSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="战斗设置" Height="202" Width="308">
    <Grid>
        <Label Content="队伍1" Height="28" HorizontalAlignment="Left" Margin="30,14,0,0" Name="label1" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="110,14,0,0" Name="cmbTeamA" SelectedItem="{Binding TeamA}" VerticalAlignment="Top" Width="120" />
        <Label Content="队伍2" Height="28" HorizontalAlignment="Left" Margin="30,48,0,0" Name="label2" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="110,48,0,0" Name="cmbTeamB" SelectedItem="{Binding TeamB}" VerticalAlignment="Top" Width="120" />
        <Label Content="战场类型" Height="28" HorizontalAlignment="Left" Margin="30,82,0,0" Name="label3" VerticalAlignment="Top" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="110,82,0,0" Name="cmbType" SelectedItem="{Binding Type}" VerticalAlignment="Top" Width="120" />
        <Button Content="开始" Height="23" HorizontalAlignment="Left" Margin="118,128,0,0" Name="btnStart" VerticalAlignment="Top" Width="75" Click="btnStart_Click" />
    </Grid>
</Window>
