<Window x:Class="Rance.TeamMgt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="队伍管理" Height="601" Width="580">
    <Grid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" Height="488" Margin="10,59,41,0" Name="grd_TeamMgt" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="名称" IsReadOnly="True" Width="100" />
                <DataGridTextColumn Binding="{Binding Member}" Header="成员" IsReadOnly="True" Width="300" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="新增" Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <Button Content="修改" Height="23" HorizontalAlignment="Right" Margin="0,10,377,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
        <Button Content="删除" Height="23" HorizontalAlignment="Left" Margin="205,10,0,0" Name="button3" VerticalAlignment="Top" Width="75" Click="button3_Click" />
    </Grid>
</Window>
